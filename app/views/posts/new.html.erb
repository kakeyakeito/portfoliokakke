<%= render "layouts/user_header"%>

<div class="container">

    <h1>Post作成画面</h1>

    <div class="main-new">
    	<%= form_with(model: Post.new, url: posts_path, local:true) do |f| %>
    	<div class="field">
    		<!-- title -->
    		<h2>title</h2>
    		<%= f.text_field :title %><br>
    	</div>

    	<h2>Tag</h2>

    	<%= f.fields_for :tags do |tag| %>

    	<div class="tag">
    		<%= render 'tag_fields', f:  tag %>
    	</div>
    	<% end %>
    	<div class="links">
    		<%= link_to_add_association 'Tag追加', f,:tags %>
    	</div>
        <%= f.submit '投稿' %>
        <% end %>
    </div>
</div>