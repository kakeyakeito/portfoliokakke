<div class="favorite-link" id="favorite-link-<%= post.id %>">
  <% if current_user.favorites.find_by(post_id: post.id) %>
    <%= link_to post_favorite_path(post.id), method: :delete, class:"fav", remote: true do %>
        <div class = "fa fa-heart" id="<%= post.id %>">❤</div>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post.id), method: :post,class:"fav", remote: true do %>
        <div class = "fa fa-heart-o" id="<%= post.id %>">♡</div>
    <% end %>
  <% end %>
</div>